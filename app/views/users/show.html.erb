<h1>ユーザー情報</h1>
<%= @user.name %>
<%= attachment_image_tag @user, :image, size: '100x100' %>
<%= @user.introduction %>
<h1>投稿一覧</h1>
<% @post.each do |post| %>
    <%= post.text %>
    <% post.post_images.each do |post_image| %>
        <%= attachment_image_tag post_image, :image, size: "130x130" %>
    <% end %>
<% end %>

<% if @user=current_user %>
    <%= link_to '戻る', users_path %>
    <%= link_to '編集する', edit_user_path(@user.id) %>
<% else %>
    <%= link_to '戻る', users_path %>
<% end %>