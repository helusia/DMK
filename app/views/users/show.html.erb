<div class="container-fluid">
    <div class="row mb-3 mt-4">
        <div class="col">
            <h1>ユーザー情報</h1>
        </div>
        <% if @user.id == current_user.id %>
            <div class="col">
                <%= link_to '戻る', users_path %>
            </div>
            <div class="col">
                <% if current_user.name != "guestuser" %>
                    <%= link_to '編集する', edit_user_path(@user.id) %>
                <% end %>
            </div>
        <% else %>
            <div class="col">
                <%= link_to '戻る', users_path %>
            </div>
         <% end %>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-2">
            <%= attachment_image_tag @user, :image, size: '100x100', fallback: "no_image.jpg" %>
        </div>
        <div class="col-lg-2">
            <%= @user.name %>
        </div>
        <div class="col">
            <%= @user.introduction %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col"><h1>この方の投稿一覧</h1></div>
    <div class="col"></div>
    <div class="col"><%=link_to"いいね一覧へ",favorites_user_path(@user) %></div>
    <div class="col"></div>
</div>
<div class="container">
    <% @post.each do |post| %>
    <div class="row">
        <%=link_to post.text, post_path(post.id) %>
    </div>
    <div class="row">
        <% post.post_images.each do |post_image| %>
            <%= attachment_image_tag post_image, :image, size: "130x130" %>
        <% end %>
    </div>
    <% end %>
</div>




<%# binding.irb %>
<!--↑処理を途中で止める記述　思い通りにならない時のエラーの確認で使う-->
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <%= link_to '削除する', user_path(@user.id),method: :delete, "data-confirm"=>"本当に消しますか？" %>
  <% end %>
<% end %>
<!--管理者だった場合、ユーザーの削除ができる-->