<div class="container">
  <div class="d-flex justify-content-between">
      <div class="p-2"><h1>ユーザー情報編集</h1></div>
      <div class="p-2"><%= link_to '戻る', posts_path, class: 'btn btn-lg btn-primary' %></div>
  </div>
  <%= form_with model: @user do |f| %>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th></th>
        </tr>
      </thead>
        <tbody>
          <tr>
            <th scope="row"></th>
            <td><label for="inputName">Name</label></td>
            <td><%= f.label :"自己紹介" %></td>
            <td><%= f.label :"画像" %></td>
          </tr>
          <tr>
            <th scope="row"></th>
            <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
            <td><%= f.text_field :introduction %></td>
            <td><%= f.attachment_field :image %></td>
            <td><%= f.submit "変更を保存" %></td>
          </tr>
        </tbody>
    </table>
  <% end %>
</div>
