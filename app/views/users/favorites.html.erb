<div class="row mt-5">
    <div class="col"><h1>いいね一覧</h1></div>
    <div class="col"><%= link_to '戻る', user_path(@user.id), class: 'btn btn-primary' %></div>
</div>
<div class="container">
    <% @favorite_posts.each do |post|%>
        <div class="row">
            <div class="col-lg-2">
                <%= attachment_image_tag post.user, :image, size: '50x50', fallback: "no_image.jpg" %>
            </div>
            <div class="col-lg-2">
                <%= link_to post.user.name, user_path(post.user.id) %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-10 mb-5">
                <%= link_to post.text, post_path(post.id) %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-10">
                <% post.post_images.each do |post_image| %>
                    <%= attachment_image_tag post_image, :image, size: "130x130" %>
                <% end %>
            </div>
        </div>
        <div class="row mt-3 ml-1">
            <div class="col-lg-2"></div>
            コメント件数：<%= post.post_comments.count %>
        </div>
    <% end %>
</div>




