<div class="container">
  <div class="row">
    <h2>ログイン</h2>
  </div>
  <%= form_with model: @user, url: user_session_path do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row"></th>
          <div class="field">
            <td><%= f.label :メールアドレス %><br /></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <div class="field">
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %><br>
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              <% end %>
            </td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <div class="actions">
            <th></th>
            <td><%= f.submit "Log in" %></td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <th></th>
          <td><%= render "devise/shared/links" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>

