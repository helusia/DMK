<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row"></th>
          <div class="field">
            <td><%= f.label :ニックネーム %></td>
            <td><%= f.text_field :name %></td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <div class="field">
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <div class="field">
            <td><%= f.label :パスワード %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <div class="field">
            <td><%= f.label :パスワード（再度入力） %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <div class="actions">
            <th></th>
            <td><%= f.submit "会員登録する" %></td>
          </div>
        </tr>
        <tr>
          <th scope="row"></th>
          <th></th>
          <td><%= render "devise/shared/links" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>


