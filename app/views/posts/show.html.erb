

<div class="container">
  <div class="row">
    <div class="col mb-5">
      <h3><%= link_to '投稿一覧へ', posts_path %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-1">
      <%= attachment_image_tag @post.user, :image, size: '50x50' %>
    </div>
    <div class="col-lg-1">
        <%= @post.user.name %>
    </div>
    <div class="col-lg-10">
      <div class="row mb-5">
        <%= @post.text %>
      </div>
      <div class="row mb-5">
        <% @post.post_images.each do |post_image| %>
          <%= attachment_image_tag post_image, :image, size: "130x130" %>
        <% end %>
      </div>
      <div class="row mb-5">
        <div class="col"><%= link_to '投稿を削除', post_path(@post.id), method: :delete %></div>
        <div class="col">
          <% if @post.favorited_by?(current_user) %>
            <p>
              <%= link_to post_favorites_path(@post), method: :delete do %>
                ♥<%= @post.favorites.count %> いいね
              <% end %>
            </p>
          <% else %>
            <p>
              <%= link_to post_favorites_path(@post), method: :post do %>
                ♡<%= @post.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
        </div>
        <div class="col"></div>
        <div class="col"></div>
      </div>
      <% @post.post_comments.each do |post_comment| %>
        <div class="row">
          <div class="col-lg-1">
            <%= attachment_image_tag post_comment.user, :image, size: '50x50', fallback: "no_image.jpg" %>
          </div>
          <div class="col-lg-1">
            <%= link_to post_comment.user.name, user_path(post_comment.id) %>
          </div>
          <div class="col">
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-lg-1"></div>
          <div class="col mb-5">
            <%= post_comment.comment %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <%= form_with model: [@post, @post_comment] do |f| %>
          <table class="table table-borderless">
            <thead>
              <tr>
                <th><%= f.text_area :comment, rows: '2', placeholder: "コメントをここに" %></th>
                <th><%= f.submit "送信する" %></th>
              </tr>
            </thead>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>



